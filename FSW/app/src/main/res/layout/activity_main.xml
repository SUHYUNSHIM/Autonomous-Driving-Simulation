<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="315dp" app:srcCompat="@drawable/redcar_start" android:id="@+id/imageView_car"
            app:layout_constraintTop_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <Button
            android:text="START"
            android:layout_width="131dp"
            android:layout_height="70dp" android:id="@+id/button_start"
            android:backgroundTint="@android:color/holo_orange_light"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="250dp"/>

    <Button
            android:text="HOWTO"
            android:layout_width="129dp"
            android:layout_height="70dp" android:id="@+id/button_howto"
            android:backgroundTint="@android:color/holo_orange_light" android:textColor="@color/colorAccent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="400dp"/>

    <TextView
            android:text="자율주행 시뮬레이션 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="60dp" app:layout_constraintTop_toBottomOf="@id/imageView_car"
            app:layout_constraintBottom_toTopOf="@+id/button_start" android:layout_marginRight="60dp"
            android:layout_marginBottom="60dp" android:textColor="@android:color/holo_blue_light"/>
</android.support.constraint.ConstraintLayout>