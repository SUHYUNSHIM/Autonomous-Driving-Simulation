<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity"
        tools:layout_editor_absoluteY="25dp"
        android:backgroundTint="@android:color/holo_orange_light">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/splash_color"
            android:id="@+id/imageView__splash_color"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="193dp"
            android:layout_height="167dp" app:srcCompat="@drawable/splash_car" android:id="@+id/imageView_splash_car"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>


